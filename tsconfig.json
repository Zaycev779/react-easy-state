{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "module": "esnext",
        "sourceMap": true,
        "baseUrl": "./",
        "incremental": true,
        "strict": true,
        "noImplicitAny": false,
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "types",
        "emitDeclarationOnly": true,
        "moduleResolution":"node",
        "paths": {
            "reasy-state": ["./src/index.ts"],
            "reasy-state/*": ["./src/*.ts"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx"],
}
